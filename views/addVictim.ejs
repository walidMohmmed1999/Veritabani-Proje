<body>
    <h1>Kurban Ekle</h1>
    <!-- HTML form for adding a victim -->
    <form action="/cases/add-victim" method="post">
        <label for="VakaID">VakaID:</label>
        <input type="text" id="VakaID" name="VakaID" required>

        <label for="Ad">Ad:</label>
        <input type="text" id="Ad" name="Ad" required>

        <label for="Soyad">Soy Ad:</label>
        <input type="text" id="Soyad" name="Soyad" required>

        <label for="DogumGunu">Dogum Gunu:</label>
        <input type="date" id="DogumGunu" name="DogumGunu">

        <label for="Adres">Addres:</label>
        <textarea id="Adres" name="Adres" required></textarea>

        <button type="submit">Kurban Ekle</button>
    </form>
</body>

</html>